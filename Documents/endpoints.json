{
  "auth": {
    "base": "/api/auth",
    "endpoints": {
      "login": {
        "method": "POST",
        "path": "/login",
        "description": "Authenticate a user and receive a JWT token",
        "request": {
          "body": {
            "email": "string",
            "password": "string"
          }
        },
        "response": {
          "200": {
            "token": "string"
          },
          "401": "Unauthorized - Invalid credentials"
        }
      },
      "register": {
        "method": "POST",
        "path": "/register",
        "description": "Register a new user (player or coach)",
        "request": {
          "body": {
            "email": "string",
            "password": "string",
            "isCoach": "boolean"
          }
        },
        "response": {
          "200": {
            "token": "string"
          },
          "400": "Bad Request - Email already registered"
        }
      },
      "createAdmin": {
        "method": "POST",
        "path": "/admin/create",
        "description": "Create a new admin user (requires admin authorization)",
        "auth": "Required (Admin role)",
        "request": {
          "body": {
            "email": "string",
            "password": "string"
          }
        },
        "response": {
          "200": "Admin user created successfully",
          "400": "Bad Request - Email already registered",
          "401": "Unauthorized",
          "403": "Forbidden - Requires admin role"
        }
      },
      "setupFirstAdmin": {
        "method": "POST",
        "path": "/setup/first-admin",
        "description": "Create the first admin user (only works when no admin exists)",
        "request": {
          "body": {
            "email": "string",
            "password": "string"
          }
        },
        "response": {
          "200": {
            "token": "string"
          },
          "400": "Bad Request - Admin already exists"
        }
      },
      "getCurrentUser": {
        "method": "GET",
        "path": "/me",
        "description": "Get current authenticated user information",
        "auth": "Required",
        "response": {
          "200": {
            "id": "number",
            "email": "string",
            "role": "string",
            "teams": [{
              "id": "number",
              "name": "string",
              "role": "string",
              "joinedAt": "string"
            }]
          },
          "401": "Unauthorized",
          "404": "User not found"
        }
      }
    }
  },
  "player": {
    "base": "/api",
    "endpoints": {
      "getCurrentPlayer": {
        "method": "GET",
        "path": "/me",
        "description": "Get current player information",
        "response": {
          "200": {
            "name": "string"
          }
        }
      }
    }
  },
  "teams": {
    "base": "/api/teams",
    "auth": "Required (Coach or Admin role)",
    "endpoints": {
      "createTeam": {
        "method": "POST",
        "path": "/",
        "description": "Create a new team",
        "request": {
          "body": {
            "name": "string",
            "description": "string?"
          }
        },
        "response": {
          "201": "Team object",
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      },
      "getTeams": {
        "method": "GET",
        "path": "/",
        "description": "Get all teams with basic info",
        "response": {
          "200": [{
            "id": "number",
            "name": "string",
            "description": "string?",
            "playerCount": "number"
          }],
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      },
      "getTeam": {
        "method": "GET",
        "path": "/{id}",
        "description": "Get detailed team information",
        "response": {
          "200": {
            "id": "number",
            "name": "string",
            "description": "string?",
            "players": [{
              "id": "number",
              "email": "string",
              "joinedAt": "string"
            }],
            "coaches": [{
              "id": "number",
              "email": "string",
              "joinedAt": "string"
            }]
          },
          "404": "Not Found",
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      },
      "addTeamMember": {
        "method": "POST",
        "path": "/{id}/members",
        "description": "Add a member to the team",
        "request": {
          "body": {
            "userId": "number",
            "role": "string (Player or Coach)"
          }
        },
        "response": {
          "200": "Success",
          "404": "Team or User Not Found",
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      },
      "removeTeamMember": {
        "method": "DELETE",
        "path": "/{id}/members/{userId}",
        "description": "Remove a member from the team",
        "response": {
          "200": "Success",
          "404": "Member not found in team",
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      },
      "updateTeam": {
        "method": "PUT",
        "path": "/{id}",
        "description": "Update team information",
        "request": {
          "body": {
            "name": "string",
            "description": "string?"
          }
        },
        "response": {
          "200": "Updated team object",
          "404": "Not Found",
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      },
      "deleteTeam": {
        "method": "DELETE",
        "path": "/{id}",
        "description": "Delete a team",
        "response": {
          "200": "Success",
          "404": "Not Found",
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      }
    }
  }
}
