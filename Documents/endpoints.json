{
  "auth": {
    "base": "/api/auth",
    "endpoints": {
      "login": {
        "method": "POST",
        "path": "/login",
        "description": "Authenticate a user and receive a JWT token",
        "request": {
          "body": {
            "email": "string",
            "password": "string"
          }
        },
        "response": {
          "200": {
            "token": "string"
          },
          "400": {
            "requiresPasswordSet": "boolean",
            "message": "string"
          },
          "401": "Unauthorized - Invalid credentials"
        }
      },
      "register": {
        "method": "POST",
        "path": "/register",
        "description": "Register a new user (player or coach)",
        "request": {
          "body": {
            "email": "string",
            "password": "string",
            "role": "string (Player or Coach)"
          }
        },
        "response": {
          "200": {
            "token": "string"
          },
          "400": "Bad Request - Email already registered"
        }
      },
      "me": {
        "method": "GET",
        "path": "/me",
        "auth": "Required",
        "description": "Get current authenticated user information",
        "response": {
          "200": {
            "id": "number",
            "email": "string",
            "role": "string",
            "invited": "boolean",
            "invitedBy": {
              "id": "number",
              "email": "string",
              "role": "string"
            },
            "teams": [{
              "id": "number",
              "name": "string",
              "role": "string",
              "joinedAt": "string"
            }]
          },
          "401": "Unauthorized"
        }
      },
      "setupFirstAdmin": {
        "method": "POST",
        "path": "/setup/first-admin",
        "description": "Create the first admin user (only works when no admin exists)",
        "request": {
          "body": {
            "email": "string",
            "password": "string"
          }
        },
        "response": {
          "200": {
            "token": "string"
          },
          "400": "Bad Request - Admin already exists"
        }
      },
      "createAdmin": {
        "method": "POST",
        "path": "/admin/create",
        "auth": "Required (Admin role)",
        "description": "Create a new admin user",
        "request": {
          "body": {
            "email": "string",
            "password": "string"
          }
        },
        "response": {
          "200": "Admin user created successfully",
          "400": "Bad Request - Email already registered",
          "401": "Unauthorized",
          "403": "Forbidden - Requires admin role"
        }
      },
      "setPassword": {
        "method": "POST",
        "path": "/set-password",
        "auth": "Required",
        "description": "Set password for authenticated user",
        "request": {
          "body": {
            "password": "string"
          }
        },
        "response": {
          "200": {
            "message": "string"
          },
          "401": "Unauthorized",
          "404": "User not found"
        }
      }
    }
  },
  "users": {
    "base": "/api/users",
    "endpoints": {
      "getUserByEmail": {
        "method": "GET",
        "path": "/by-email/{email}",
        "auth": "Required (Coach or Admin role)",
        "description": "Get user information by email",
        "response": {
          "200": {
            "id": "number",
            "email": "string",
            "role": "string",
            "invited": "boolean",
            "invitedBy": {
              "id": "number",
              "email": "string",
              "role": "string"
            },
            "teams": [{
              "id": "number",
              "name": "string",
              "role": "string",
              "joinedAt": "string"
            }]
          },
          "404": "Not Found",
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      }
    }
  },
  "teams": {
    "base": "/api/teams",
    "endpoints": {
      "createTeam": {
        "method": "POST",
        "path": "/",
        "auth": "Required (Coach or Admin role)",
        "description": "Create a new team",
        "request": {
          "body": {
            "name": "string",
            "description": "string?"
          }
        },
        "response": {
          "201": {
            "id": "number",
            "name": "string",
            "description": "string?",
            "createdAt": "string",
            "members": [{
              "userId": "number",
              "email": "string",
              "role": "string",
              "joinedAt": "string"
            }]
          },
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      },
      "getTeams": {
        "method": "GET",
        "path": "/",
        "auth": "Required (Coach or Admin role)",
        "description": "Get all teams",
        "response": {
          "200": [{
            "id": "number",
            "name": "string",
            "description": "string?",
            "playerCount": "number"
          }],
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      },
      "getTeam": {
        "method": "GET",
        "path": "/{id}",
        "auth": "Required (Coach or Admin role)",
        "description": "Get detailed team information",
        "response": {
          "200": {
            "id": "number",
            "name": "string",
            "description": "string?",
            "createdAt": "string",
            "members": [{
              "userId": "number",
              "email": "string",
              "role": "string",
              "joinedAt": "string"
            }]
          },
          "404": "Not Found",
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      },
      "updateTeam": {
        "method": "PUT",
        "path": "/{id}",
        "auth": "Required (Coach or Admin role)",
        "description": "Update team information",
        "request": {
          "body": {
            "name": "string",
            "description": "string?"
          }
        },
        "response": {
          "200": {
            "id": "number",
            "name": "string",
            "description": "string?",
            "createdAt": "string",
            "members": []
          },
          "404": "Not Found",
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      },
      "deleteTeam": {
        "method": "DELETE",
        "path": "/{id}",
        "auth": "Required (Coach or Admin role)",
        "description": "Delete a team",
        "response": {
          "200": "Success",
          "404": "Not Found",
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      },
      "addTeamMember": {
        "method": "POST",
        "path": "/{id}/members",
        "auth": "Required (Coach or Admin role)",
        "description": "Add a member to the team. If the user doesn't exist, they will be created and marked as invited.",
        "request": {
          "body": {
            "email": "string",
            "role": "string (Player or Coach)"
          }
        },
        "response": {
          "200": {
            "userId": "number",
            "email": "string",
            "role": "string",
            "joinedAt": "string"
          },
          "404": "Team Not Found",
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      },
      "removeTeamMember": {
        "method": "DELETE",
        "path": "/{id}/members/{userId}",
        "auth": "Required (Coach or Admin role)",
        "description": "Remove a member from the team",
        "response": {
          "200": "Success",
          "404": "Member not found in team",
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      }
    }
  },
  "challenges": {
    "base": "/api/challenge",
    "endpoints": {
      "createChallenge": {
        "method": "POST",
        "path": "/",
        "auth": "Required (Coach or Admin role)",
        "description": "Create a new challenge",
        "request": {
          "body": {
            "teamId": "number",
            "name": "string",
            "description": "string?",
            "type": "enum (ChallengeType)",
            "frequency": "enum (ChallengeFrequency)",
            "startDate": "string (date)",
            "endDate": "string (date)"
          }
        },
        "response": {
          "201": {
            "id": "number",
            "name": "string",
            "description": "string?",
            "type": "string",
            "frequency": "string",
            "startDate": "string",
            "endDate": "string",
            "teamId": "number",
            "createdById": "number"
          },
          "404": "Team not found",
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      },
      "getTeamChallenges": {
        "method": "GET",
        "path": "/team/{teamId}/challenges",
        "auth": "Required",
        "description": "Get all challenges for a team",
        "response": {
          "200": [{
            "id": "number",
            "name": "string",
            "description": "string?",
            "type": "string",
            "frequency": "string",
            "startDate": "string",
            "endDate": "string",
            "completionCount": "number",
            "createdById": "number"
          }],
          "401": "Unauthorized"
        }
      },
      "getChallenge": {
        "method": "GET",
        "path": "/{id}",
        "auth": "Required",
        "description": "Get challenge information (only if user is member of the team)",
        "response": {
          "200": {
            "id": "number",
            "name": "string",
            "description": "string?",
            "type": "string",
            "frequency": "string",
            "startDate": "string",
            "endDate": "string",
            "createdById": "number"
          },
          "404": "Not Found or User not team member",
          "401": "Unauthorized"
        }
      },
      "updateChallenge": {
        "method": "PUT",
        "path": "/{id}",
        "auth": "Required",
        "description": "Update challenge information (only if user is creator)",
        "request": {
          "body": {
            "name": "string",
            "description": "string?",
            "type": "enum (ChallengeType)",
            "frequency": "enum (ChallengeFrequency)",
            "startDate": "string (date)",
            "endDate": "string (date)"
          }
        },
        "response": {
          "200": {
            "id": "number",
            "name": "string",
            "description": "string?",
            "type": "string",
            "frequency": "string",
            "startDate": "string",
            "endDate": "string"
          },
          "404": "Not Found",
          "401": "Unauthorized",
          "403": "Forbidden - Not challenge creator"
        }
      },
      "deleteChallenge": {
        "method": "DELETE",
        "path": "/{id}",
        "auth": "Required",
        "description": "Delete a challenge (only if user is creator)",
        "response": {
          "200": "Success",
          "404": "Not Found",
          "401": "Unauthorized",
          "403": "Forbidden - Not challenge creator"
        }
      },
      "completeChallenge": {
        "method": "POST",
        "path": "/{id}/complete",
        "auth": "Required",
        "description": "Log a challenge completion",
        "request": {
          "body": {
            "notes": "string?"
          }
        },
        "response": {
          "200": {
            "challengeId": "number",
            "userId": "number",
            "completedAt": "string",
            "notes": "string?"
          },
          "401": "Unauthorized"
        }
      },
      "getMyChallenges": {
        "method": "GET",
        "path": "/my",
        "auth": "Required (Coach or Admin role)",
        "description": "Get all challenges created by the current user",
        "response": {
          "200": [{
            "id": "number",
            "name": "string",
            "description": "string?",
            "type": "string",
            "frequency": "string",
            "startDate": "string",
            "endDate": "string",
            "completionCount": "number"
          }],
          "401": "Unauthorized",
          "403": "Forbidden - Requires coach/admin role"
        }
      }
    }
  }
}
